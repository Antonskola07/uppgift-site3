---
import "@assets/bulma.scss";
import NavBar from "@components/NavBar.astro";
import logo from "@assets/logo.svg"
interface Props {
	title: string;
}
const {title} = Astro.props;
import { getImage } from 'astro:assets';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={(await getImage({src: logo, format: "svg"})).src} />
		<meta name="generator" content={Astro.generator} />
		<title>{title} - Min roliga spelsida</title>
	</head>
	<body>
		<NavBar />
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
