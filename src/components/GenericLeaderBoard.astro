---
interface Props {
    isLoading: boolean;
    scores: {
        name: string;
        score: number;
        id: number;
    }[];
};
const {isLoading, scores} = Astro.props;
---
<table class:list={[
    'table',
    'is-fullwidth',
    'is-hoverable'
]}>
    <thead>
        <tr>
            <th>Plats</th>
            <th class="ml-5">Po√§ng</th>
            <th>Namn</th>
        </tr>
    </thead>
    <tbody>
        {scores.map((score, i) => (
            <tr class:list={[
                    {'is-skeleton': isLoading}
                ]}>
                <td>${i}</td>
                <td style={isLoading ? 'opacity: 0' : ''}>{isLoading ? 'a' : score.score}</td>
                <td>{score.name}</td>
            </tr>
        ))}
    </tbody>
</table>