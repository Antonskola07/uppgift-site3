---
import Layout from '../layouts/Layout.astro';
export const prerender = true;
---

<Layout title='Hem'>
	<h1 class="title has-text-centered mt-4">Spel</h1>
	<div class="columns">
		<div class="column is-half">
			<img src="https://cdn.datorkonsulterna.se/spel.png" class="image" alt="Bild på spelet">
		</div>
		<div class="column is-half">
			<img src="https://cdn.datorkonsulterna.se/spel.png" class="image" alt="Bild på spelet">
		</div>
	</div>
	<div class="columns is-centered mt-1 mb-6">
		<a href="/play">
			<button class="button is-link">
				Spela nu!
			</button>
		</a>
	</div>
</Layout>

<style lang="scss">
	img {
		width: 1000px;
		display: block;
	}
</style>